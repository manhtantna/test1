<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= title %></title>
	<link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
</head>
<body>
	<% include ../layout/header.ejs %>
		<div class="container">
			<div class="row">
				<div class="col-sm-4"></div>
				<div class="col-sm-4">
					<% if (message) { %>
							<div class="alert alert-success"><p><%= message %></p></div>	
					<% } %>	
					<form  class="was-validated needs-validation" action="add" method="POST">
						<table class="table table-hover">
							<tr>
								<td><label class="font-weight-bold">Username</label></td>
								<td>
									<input type="text" name="username" placeholder="@" class="form-control" required>
								</td>
							</tr>
							<tr>
								<td><label class="font-weight-bold">Password</label></td>
								<td>
									<input type="password" name="password" placeholder="@" class="form-control" required>
								</td>
							</tr>
							<tr>
								<td><label class="font-weight-bold">Level</label></td>
								<td>
									<select name="level">
										<option value="1">Member</option>
										<option value="2">Admin</option>
										<option value="3">SuperAdmin</option>
									</select>
								</td>
							</tr>
							<tr>
								<td><label class="font-weight-bold">Status</label></td>
								<td>
									<select name="status">
										<option value="0">disable</option>
										<option value="1">banner</option>
										<option value="2">active</option>
									</select>
								</td>
							</tr>
							<tr>
								<td colspan ="2" class="text-center">
									<input type="submit" name=btn_login value="Add" class="btn btn-success">
								</td>
							</tr>
						</table>														
					</form>					
				</div>
				<div class="col-sm-4"></div>
			</div>
		</div>
	<% include ../layout/footer.ejs %>	
</body>
</html>
